<!-- Modal -->
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <%= form_for [:admin, @user], remote: true do |f| %>
        <div class="modal-header card-header py-3">
            <h6 class="font-weight-bold text-primary" id="exampleModalLongTitle">User management</h6>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= form_group_for f, :first_name, label: false  do %>
                    <%= f.text_field :first_name, class: 'form-control form-control-user', placeholder: "First Name"%>
                    <%end%>
                </div>
                <div class="col-sm-6">
                    <%= form_group_for f, :surname, label: false  do %>
                    <%= f.text_field :surname, class: 'form-control form-control-user', placeholder: "Last Name"%>
                    <%end%>
                </div>
            </div>
            <%= form_group_for f, :username, label: false  do %>
            <%= f.text_field :username, class: 'form-control form-control-user', placeholder: "Username"%>
            <%end%>
            <%= form_group_for f, :email, label: false  do %>
            <%= f.text_field :email, class: 'form-control form-control-user', placeholder: "Email Address"%>
            <%end%>
            <%= form_group_for f, :admin, label: false  do %>
            <div class="custom-control custom-checkbox small">
                <%= f.check_box :admin, class: 'custom-control-input' %>
                <%= f.label :admin, 'Is Admin?' , class: 'custom-control-label' %>
            </div>
            <%end%>
            <br>
            <p class="py-0" style="font-size: 0.85em;">Password should be strong: at least 8 chars, with at least 1
                uppercase, 1
                lowercase and 1 special char</p>
            <div class="row">
                <div class="col-sm-6 mb-3 mb-sm-0">
                    <%= form_group_for f, :password, label: false  do %>
                    <%= f.text_field :password, class: 'form-control form-control-user', placeholder: "Password"%>
                    <%end%>
                    <br>
                </div>
                <div class="col-sm-6">
                    <%= form_group_for f, :password_confirmation, label: false  do %>
                    <%= f.text_field :password_confirmation, class: 'form-control form-control-user', placeholder: "Repeat Password"%>
                    <%end%>
                </div>
            </div>
         
        </div>
    <div class="modal-footer">
        <button type="button" id="btnClose_newTask" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Create account', :class => 'btn btn-primary' %>
    </div>
    <%end%>
</div>
</div>