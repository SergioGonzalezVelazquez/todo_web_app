<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                        </div>
                        <%= form_for @user, :html => {:class => 'user'} do |f| %>

                        <div class="row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <%= form_group_for f, :first_name, label: false  do %>
                                <%= f.text_field :first_name, class: 'form-control form-control-user', placeholder: "First Name"%>
                                <%end%>
                            </div>
                            <div class="col-sm-6">
                                <%= form_group_for f, :surname, label: false  do %>
                                <%= f.text_field :surname, class: 'form-control form-control-user', placeholder: "Last Name"%>
                                <%end%>
                            </div>
                        </div>
                        <%= form_group_for f, :username, label: false  do %>
                            <%= f.text_field :username, class: 'form-control form-control-user', placeholder: "Username"%>
                        <%end%>
                        <%= form_group_for f, :email, label: false  do %>
                            <%= f.text_field :email, class: 'form-control form-control-user', placeholder: "Email Address"%>
                        <%end%>
                        <br>
                        <p class="py-0" style="font-size: 0.85em;">Password should be strong: at least 8 chars, with at least 1 uppercase, 1 lowercase and 1 special char</p>
                        <div class="row">
                            <div class="col-sm-6 mb-3 mb-sm-0">
                                <%= form_group_for f, :password, label: false  do %>
                                <%= f.text_field :password, class: 'form-control form-control-user', placeholder: "Password"%>
                                <%end%>
                                <br>
                            </div>
                            <div class="col-sm-6">
                                <%= form_group_for f, :password_confirmation, label: false  do %>
                                <%= f.text_field :password_confirmation, class: 'form-control form-control-user', placeholder: "Repeat Password"%>
                                <%end%>
                            </div>
                        </div>
                        <%= f.submit 'Create account', :class => 'btn btn-primary btn-user btn-block' %>
                        <%end%>
                        <hr>
                        <div class="text-center">
                            <%= link_to "Already have an account? Login", login_path, class: "small" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>