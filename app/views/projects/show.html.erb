<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    <%= render "shared/sidebar", active: 4 %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%= render "shared/navbar", title: 'Task Collection: ' + @project.name %>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="row justify-content-start pl-3">

                    <!-- Page Heading: Buttons for add, edit and delete tasks -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4 pr-3">
                        <%= link_to '<i class="fas fa-plus fa-sm text-white-50"></i> Add
                      task to project'.html_safe, "#", {:local => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-task-project',
                       class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm", id: "btn_add_task_project"}%>
                    </div>

                    <div class="d-sm-flex align-items-center justify-content-between mb-4 pr-3">
                        <%= link_to '<i class="fas fa-pencil-alt fa-sm text-white-50"></i> Edit project'.html_safe, edit_project_path(@project), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-project', class: "d-none d-sm-inline-block btn
                        btn-sm btn-secondary shadow-sm", id: "btn_edit_project"}%>
                    </div>

                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <%= link_to '<i class="fas fa-trash fa-sm text-white-50"></i> Delete project'.html_safe, project_path(@project), method:
                            :delete, class: "d-none d-sm-inline-block btn btn-sm btn-danger shadow-sm", id: "btn_delete_project", data: { confirm: 'Are you sure?' }%>
                    </div>
                </div>

                <!-- Page Heading: Project description -->
                <div class="row justify-content-start pl-3">
                    <p class="mb-4" id="lbl_project_description">
                        <%= @project.description%>
                    </p>
                </div>


                <!-- Content Row -->
                <div class="row">
                    <!-- Pending Tasks for this project (Card) -->
                    <%= render "shared/card", title: 'Pending Tasks', value: @pending_tasks.count, icon: 'fas fa-list', color: 'primary' %>

                    <!-- Completed Tasks for this project (Card) -->
                    <%= render "shared/card", title: 'Completed Tasks', value: @completed_tasks.count, icon: 'fas fa-check', color: 'success' %>

                </div>

                <!-- List of pending tasks for this project-->
                <% @pending_tasks.each_with_index do |task, index| %>
                <%= render "tasks/task", task: task, index: index %>
                <% end %>
            </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%= render "shared/footer"%>
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Add task to project Modal -->
<div class="modal" id="modal-task-project" tabindex="-1" role="dialog" aria-labelledby="modalTaskProjectTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <%= form_with(model: [ @project, @project.tasks.build ], local: true) do |form| %>
            <div class="modal-header card-header py-3">
                <h6 class="font-weight-bold text-primary" id="exampleModalLongTitle">Add task to project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <%= form.label :name %>*<br />
                    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter task name' %>
                </div>

                <div class="form-group">
                    <%= form.label :description %><br />
                    <%= form.text_area :description, class: 'form-control', placeholder: 'Optionally you can write a description of the task' %>
                </div>

                <div class="form-group">
                    <%= form.label :priority %>*<br />
                    <%= form.select :priority, [["High", "high"], ["Medium", "medium"], ["Low", "low"]], {}, {class: "form-control"} %>
                </div>

                <div class="form-group">
                    <%= form.label :deadline %><br />
                    <%= form.date_field :deadline, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= form.submit class: 'btn btn-primary', id: "btn_task_submit"%>
            </div>
            <% end %>
        </div>
    </div>