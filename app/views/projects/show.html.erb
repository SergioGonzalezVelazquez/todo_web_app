                                        <i class="fas fa-list fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Completed
                                            Tasks</div>
                                        <div id="lbl_completed_task" class="h5 mb-0 font-weight-bold text-gray-800">
                                            <%= @completed_tasks.count %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-check fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Collapsable Card Example -->
                <% @pending_tasks.each_with_index do |task, index| %>
                <div class="card shadow mb-4 <%= 'border-left-primary' if task.priority == 'low' %>  
          <%= 'border-left-warning' if task.priority == 'medium' %>
            <%= 'border-left-danger' if task.priority == 'high' %>">
                    <!-- Card Header - Accordion -->
                    <div class="card-header py-3 d-flex flex-row justify-content-between">
                        <div class="col-4">
                            <div class="row py-0">
                                <h6 id="lbl_task_name_<%=index + 1%>" class="m-0 font-weight-bold text-primary"><%= task.name %></h6>
                            </div>
                        </div>
                        <div class="dropdown no-arrow">
                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i id="task_header_option_<%=index + 1%>"  class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                                aria-labelledby="dropdownMenuLink">
                                <a class="dropdown-item" href="#collapseTask<%= index +1 %>" data-toggle="collapse">View
                                    details</a>
                                <div class="dropdown-divider"></div>
                                <%= link_to 'Mark as completed', mark_as_completed_task_path(task), method:
                                :post, class: "dropdown-item", id: "task_complete_".concat((index + 1).to_s) %>

                                <%= link_to 'Remove from project', remove_from_project_task_path(task), method:
                                :post, class: "dropdown-item", id: "task_remove_project_".concat((index + 1).to_s), data: { confirm: 'Are you sure?' } %>

                                <%= link_to 'Edit task', project_tasks_path(@project, task), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-task', class: "dropdown-item",
                                 id: "task_edit_".concat((index + 1).to_s)}%>

                                <%= link_to 'Delete task', task_path(task), method:
                                :delete, class: "dropdown-item", id: "task_delete_".concat((index + 1).to_s), 
                                data: { confirm: 'Are you sure?' } %>
                            </div>
                        </div>
                    </div>
                    <!-- Card Content - Collapse -->
                    <div class="collapse" id="collapseTask<%= index +1 %>">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-1">
                                    <span class="small font-weight-bold">Description:</span>
                                </div>
                                <div class="col">
                                    <span class="small"><%= task.description %></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-1">
                                    <span class="small font-weight-bold">Priority:</span>
                                </div>
                                <div class="col">
                                    <span class="small"><%= task.priority %></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-1">
                                    <span class="small font-weight-bold">Deadline:</span>
                                </div>
                                <div class="col">
                                    <span class="small"><%= task.deadline %></span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <% end %>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Web Systems Development 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
