<div class="modal" id="modal-form-project" tabindex="-1" role="dialog" aria-labelledby="modalNewProjectTitle"
    aria-hidden="true">
</div>

<!-- Add task to project Modal -->
<div class="modal" id="modal-task-project" tabindex="-1" role="dialog" aria-labelledby="modalTaskProjectTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <%= form_with(model: [ @project, @project.tasks.build ], local: true) do |form| %>
            <div class="modal-header card-header py-3">
                <h6 class="font-weight-bold text-primary" id="exampleModalLongTitle">Add task to project</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <%= form.label :name %>*<br />
                    <%= form.text_field :name, class: 'form-control', placeholder: 'Enter task name' %>
                </div>

                <div class="form-group">
                    <%= form.label :description %><br />
                    <%= form.text_area :description, class: 'form-control', placeholder: 'Optionally you can write a description of the task' %>
                </div>

                <div class="form-group">
                    <%= form.label :priority %>*<br />
                    <%= form.select :priority, [["High", "high"], ["Medium", "medium"], ["Low", "low"]], {}, {class: "form-control"} %>
                </div>

                <div class="form-group">
                    <%= form.label :deadline %><br />
                    <%= form.date_field :deadline, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <%= form.submit class: 'btn btn-primary', id: "btn_task_submit"%>
            </div>
            <% end %>
        </div>
    </div>

