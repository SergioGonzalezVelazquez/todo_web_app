<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    <%= render "shared/sidebar", active: 4 %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <%= render "shared/navbar", title: 'Task Collections'%>

            <!-- Begin Page Content -->
            <div class="container-fluid">
                <div class="align-items-center justify-content-between mb-4">
                    <%= link_to '<i class="fas fa-plus fa-sm text-white-50"></i> Create Project'.html_safe, 
                    new_project_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-project', id: "btn_create_project", class: "d-none d-sm-inline-block btn
                    btn-sm btn-primary shadow-sm"}%>
                </div>

                <!-- Content Row -->
                <div class="row">
                    <!-- Pending Tasks Card -->
                    <%= render "shared/card", title: 'Project Owner', value: @projects_owner.count, icon: 'fas fa-list', color: 'primary' %>

                    <!-- Completed Tasks Card -->
                    <%= render "shared/card", title: 'Shared with me', value: @projects_shared.count, icon: 'fas fa-check', color: 'success' %>

                </div>

                <!-- List of all projects where user is author -->
                <% @projects_owner.each_with_index do |project, index| %>
                <%= render "projects/project", project: project, index: index %>
                <% end %>

                <!-- List of all projects shared with user -->
                <% @projects_shared.each_with_index do |project, index| %>
                <%= render "projects/project", project: project, index: index %>
                <% end %>
            </div>
        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <%= render "shared/footer"%>
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- New Project Modal -->
<div class="modal" id="modal-form-project" tabindex="-1" role="dialog" aria-labelledby="modalNewProjectTitle"
    aria-hidden="true">
</div>

<!-- Add task to project Modal -->
<div class="modal" id="modal-task-project" tabindex="-1" role="dialog" aria-labelledby="modalTaskProjectTitle"
    aria-hidden="true">
</div>