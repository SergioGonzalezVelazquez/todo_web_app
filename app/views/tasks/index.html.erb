        <span>Projects</span>
      </a>
      <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
          <%= link_to 'Create new project', new_project_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-project', class: "collapse-item", 
            id: "btn_create_project"}%>
          <h6 class="collapse-header">My projects</h6>
          <% @projects.each_with_index do |project, index| %>
          <%= link_to project.name, project_path(project), 
            class: "collapse-item", id: "project_link_".concat((index.to_i + 1).to_s)%>
          <% end %>

        </div>
      </div>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider d-none d-md-block" />
    <!--
    <div class="text-center d-none d-md-inline">
      <button class="rounded-circle border-0" id="sidebarToggle"></button>
    </div>
  -->
  </ul>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        <!-- Sidebar Toggle (Topbar) -->
        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
          <i class="fa fa-bars"></i>
        </button>

        <!-- Page Heading -->
        <nav class="navbar navbar">
          <span class="navbar-brand mb-0 h1">Inbox</span>
        </nav>

        <!-- Topbar Navbar -->
        <ul class="navbar-nav ml-auto">

          <div class="topbar-divider d-none d-sm-block"></div>

          <!-- Nav Item - User Information -->
          <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              <span
                class="mr-2 d-none d-lg-inline text-gray-600 small"><%= current_user.first_name.concat(" " + current_user.surname) %></span>
              <img class="img-profile rounded-circle" src="/images/user-default.png" />
            </a>
            <!-- Dropdown - User Information -->
            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
              <a class="dropdown-item" href="#">
                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                Profile
              </a>
              <%= link_to '<i class="fas fa-user-slash fa-sm fa-fw mr-2 text-gray-400"></i> Delete account'.html_safe, user_path(current_user), method:
              :delete, class: "dropdown-item",  id: "user_account_delete",  data: { confirm: 'Are you sure?' } %>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                Logout
              </a>
            </div>
          </li>
        </ul>
      </nav>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="align-items-center justify-content-between mb-4">
          <%= link_to '<i class="fas fa-plus fa-sm text-white-50"></i> Add
          task'.html_safe, new_task_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-task', id: "btn_add_task", class: "d-none d-sm-inline-block btn
          btn-sm btn-primary shadow-sm"}%>
        </div>


        <!-- Content Row -->
        <div class="row">

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Pending tasks</div>
                    <div id="lbl_pending_task" class="h5 mb-0 font-weight-bold text-gray-800">
                      <%= @pending_tasks.count %></div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-list fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Completed Tasks</div>
                    <div id="lbl_completed_task" class="h5 mb-0 font-weight-bold text-gray-800">
                      <%= @completed_tasks_count %></div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-check fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>



          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Tasks for today</div>
                    <div class="row no-gutters align-items-center">
                      <div class="col-auto">
                        <div id="lbl_today_task" class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                          <%= @today_tasks_percent %></div>
                      </div>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-calendar-day fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pending Requests Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Tasks for this week</div>
                    <div id="lbl_week_task" class="h5 mb-0 font-weight-bold text-gray-800"><%= @week_tasks_count%></div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-calendar-alt fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>


        <!-- Collapsable Card Example -->
        <% @pending_tasks.each_with_index do |task, index| %>
        <div class="card shadow mb-4 <%= 'border-left-primary' if task.priority == 'low' %>  
          <%= 'border-left-warning' if task.priority == 'medium' %>
            <%= 'border-left-danger' if task.priority == 'high' %>">
          <!-- Card Header - Accordion -->
          <div id="task_header_<%=index + 1%>" class="card-header py-3 d-flex flex-row justify-content-between">
            <div class="col-4">
              <div class="row py-0">
                <h6 id="lbl_task_name_<%=index + 1%>" class="m-0 font-weight-bold text-primary"><%= task.name %></h6>
              </div>
            </div>
            <div class="dropdown no-arrow">
              <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i id="task_header_option_<%=index + 1%>" class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#collapseTask<%= index +1 %>" id="task_details_<%=index + 1%>"
                  data-toggle="collapse">View details</a>
                <div class="dropdown-divider"></div>
                <%= link_to 'Mark as completed', mark_as_completed_task_path(task), method:
                :post, class: "dropdown-item", id: "task_complete_".concat((index + 1).to_s) %>

                <% if task.project.present? %>
                <%= link_to 'Remove from the project', remove_from_project_task_path(task), method:
                  :post, class: "dropdown-item",  id: "task_remove_project_".concat((index + 1).to_s) %>
                <% end %>


                <%= link_to 'Edit task', edit_task_path(task), {:remote => true, 'data-toggle' =>  "modal",
                 'data-target' => '#modal-form-task', class: "dropdown-item",  id: "task_edit_".concat((index + 1).to_s)}%>

                <%= link_to 'Delete task', task_path(task), method:
                :delete, class: "dropdown-item",  id: "task_delete_".concat((index + 1).to_s),  data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>

          <!-- Card Content - Collapse -->
          <div class="collapse" id="collapseTask<%= index +1 %>">
            <div class="card-body">
              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Description:</span>
                </div>
                <div class="col">
                  <span id="lbl_task_description_<%=index + 1%>" class="small"><%= task.description %></span>
                </div>
              </div>

              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Priority:</span>
                </div>
                <div class="col">
                  <span id="lbl_task_priority_<%=index + 1%>" class="small"><%= task.priority %></span>
                </div>
              </div>

              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Deadline:</span>
                </div>
                <div class="col">
                  <span id="lbl_task_deadline_<%=index + 1%>" class="small"><%= task.deadline %></span>
                </div>
              </div>

              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Belongs to:</span>
                </div>
                <% if task.project.present? %>
                <div class="col">
                  <span id="lbl_task_project_name_<%=index + 1%>" class="small"><%= task.project.name %></span>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <footer class="sticky-footer bg-white">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>Copyright &copy; Web Systems Development 2020</span>
        </div>
      </div>
    </footer>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

