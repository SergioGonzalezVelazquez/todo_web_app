<!-- Modal -->
<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <%= form_with model: @task, remote: true do |form| %>
    <div class="modal-header card-header py-3">
      <h6 class="font-weight-bold text-primary" id="exampleModalLongTitle">Add new task</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">

      <% if @task.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@task.errors.count, "error") %> prohibited this task from
          being saved:
        </h2>
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= form.label :name %><br />
        <%= form.text_field :name, class: 'form-control', placeholder: 'Enter task name' %>
      </div>

      <div class="form-group">
        <%= form.label :description %><br />
        <%= form.text_area :description, class: 'form-control', placeholder: 'Optionally you can write a description of the task' %>
      </div>

      <div class="form-group">
        <label for="exampleInputPriority">Priority</label>
      </div>

      <div class="form-group">
        <label for="exampleInputDeadline">Deadline</label>
      </div>


    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= form.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>