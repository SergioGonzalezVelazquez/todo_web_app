<!-- Modal -->
<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <%= form_with model: @task, remote: true do |form| %>
    <div class="modal-header card-header py-3">
      <h6 class="font-weight-bold text-primary" id="exampleModalLongTitle">Task form</h6>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">

      <% if @task.errors.any? %>
      <div id="error_explanation">
        <!--
        <h2>
          <%= pluralize(@task.errors.count, "error") %> prohibited this task from
          being saved:
        </h2>
        -->
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
          <li class="alert alert-danger" role="alert">
            <%= msg %>
          </li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= form.label :name %>*<br />
        <%= form.text_field :name, class: 'form-control', placeholder: 'Enter task name' %>
      </div>

      <div class="form-group">
        <%= form.label :description %><br />
        <%= form.text_area :description, class: 'form-control', placeholder: 'Optionally you can write a description of the task' %>
      </div>

      <div class="form-group">
        <%= form.label :priority %>*<br />
        <%= form.select :priority, [["High", "high"], ["Medium", "medium"], ["Low", "low"]], {}, {class: "form-control"} %>
      </div>

      <div class="form-group">
        <%= form.label :deadline %><br />
        <%= form.date_field :deadline, as: :date, value: form.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>
      </div>


    </div>
    <div class="modal-footer">
      <button type="button" id="btnClose_newTask" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <%= form.submit class: 'btn btn-primary', id:'btn_task_submit' %>
    </div>
    <% end %>
  </div>
</div>