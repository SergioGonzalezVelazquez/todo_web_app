<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
      <div class="sidebar-brand-icon">
        <!-- <div class="sidebar-brand-icon rotate-n-15">-->
        <i class="fas fa-tasks"></i>
      </div>
      <div class="sidebar-brand-text mx-3">TODO App</div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider" />

    <!-- Heading -->
    <div class="sidebar-heading">
      Tasks
    </div>

    <!-- Nav Item - Inbox -->
    <li class="nav-item">
      <a class="nav-link" href="index.html">
        <i class="fas fa-inbox"></i>
        <span>Inbox</span></a>
    </li>

    <!-- Nav Item - Today -->
    <li class="nav-item active">
      <a class="nav-link" href="today.html">
        <i class="fas fa-calendar-day"></i>
        <span>Today</span></a>
    </li>

    <!-- Nav Item - This week -->
    <li class="nav-item ">
      <a class="nav-link" href="week.html">
        <i class="fas fa-calendar-alt"></i>
        <span>This week</span></a>
    </li>

    <!-- Divider -->
    <hr class="sidebar-divider" />

    <!-- Heading -->
    <div class="sidebar-heading">
      Collections
    </div>

    <!-- Nav Item - Projects Collapse Menu -->
    <li class="nav-item">
      <a class="nav-link" href="#" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="true"
        aria-controls="collapseTwo">
        <i class="fas fa-folder-open"></i>
        <span>Projects</span>
      </a>
      <div id="collapseTwo" class="collapse show" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
        <div class="bg-white py-2 collapse-inner rounded">
          <%= link_to 'Create new project', new_project_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-project', class: "collapse-item"}%>
          <h6 class="collapse-header">My projects</h6>
          <% @projects.each_with_index do |project, index| %>
          <%= link_to project.name, project_path(project), 
            class: "collapse-item"%>
          <% end %>
        </div>
      </div>
    </li>


    <!-- Divider -->
    <hr class="sidebar-divider d-none d-md-block" />
  </ul>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
        <!-- Sidebar Toggle (Topbar) -->
        <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
          <i class="fa fa-bars"></i>
        </button>

        <!-- Page Heading -->
        <nav class="navbar navbar">
          <span class="navbar-brand mb-0 h1">Today</span>
        </nav>

         <!-- Topbar Navbar -->
         <ul class="navbar-nav ml-auto">

          <div class="topbar-divider d-none d-sm-block"></div>

          <!-- Nav Item - User Information -->
          <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              <span
                class="mr-2 d-none d-lg-inline text-gray-600 small"><%= current_user.first_name.concat(" " + current_user.surname) %></span>
              <img class="img-profile rounded-circle" src="/images/user-default.png" />
            </a>
            <!-- Dropdown - User Information -->
            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
              <%= link_to '<i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i> Profile'.html_safe, edit_user_path, class: "dropdown-item",  id: "user_account_edit" %>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                Logout
              </a>
            </div>
          </li>
        </ul>
      </nav>
      <!-- End of Topbar -->


      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->


        <!-- Content Row -->
        <div class="row">

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Pending
                      tasks</div>
                    <div id="lbl_today_pending_task" class="h5 mb-0 font-weight-bold text-gray-800"><%= @today_tasks.count %>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-list fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Earnings (Monthly) Card Example -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Completed
                      Tasks</div>
                    <div id="lbl_today_completed_task"class="h5 mb-0 font-weight-bold text-gray-800"><%= @today_tasks_completed%>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-check fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>




        </div>





        <!-- Collapsable Card Example -->
        <% @today_tasks.each_with_index do |task, index| %>
        <div class="card shadow mb-4 <%= 'border-left-primary' if task.priority == 'low' %>  
            <%= 'border-left-warning' if task.priority == 'medium' %>
              <%= 'border-left-danger' if task.priority == 'high' %>">
          <!-- Card Header - Accordion -->
          <div class="card-header py-3 d-flex flex-row justify-content-between">
            <div class="col-4">
              <div class="row py-0">
                <h6 class="m-0 font-weight-bold text-primary"><%= task.name %></h6>
              </div>
            </div>
            <div class="dropdown no-arrow">
              <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                aria-labelledby="dropdownMenuLink">
                <a class="dropdown-item" href="#collapseTask<%= index +1 %>" data-toggle="collapse">View details</a>
                <div class="dropdown-divider"></div>
                <%= link_to 'Mark as completed', mark_as_completed_task_path(task), method:
      :post, class: "dropdown-item" %>

                <% if task.project.present? %>
                <%= link_to 'Remove from the project', remove_from_project_task_path(task), method:
               :post, class: "dropdown-item" %>
                <% end %>


                <%= link_to 'Edit task', edit_task_path(task), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-form-task', class: "dropdown-item"}%>

                <%= link_to 'Delete task', task_path(task), method:
      :delete, class: "dropdown-item", data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>

          <!-- Card Content - Collapse -->
          <div class="collapse" id="collapseTask<%= index +1 %>">
            <div class="card-body">
              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Description:</span>
                </div>
                <div id="lbl_task_description" class="col">
                  <span class="small"><%= task.description %></span>
                </div>
              </div>

              <div class="row">
                <div  class="col-1">
                  <span class="small font-weight-bold">Priority:</span>
                </div>
                <div id="lbl_task_priority" class="col">
                  <span class="small"><%= task.priority %></span>
                </div>
              </div>

              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Deadline:</span>
                </div>
                <div id="lbl_task_deadline" class="col">
                  <span class="small"><%= task.deadline %></span>
                </div>
              </div>

              <div class="row">
                <div class="col-1">
                  <span class="small font-weight-bold">Belongs to:</span>
                </div>
                <% if task.project.present? %>
                <div id="lbl_task_project_name" class="col">
                  <span class="small"><%= task.project.name %></span>
                </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <footer class="sticky-footer bg-white">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>Copyright &copy; Web Systems Development 2020</span>
        </div>
      </div>
    </footer>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- New Task Modal -->
<div class="modal" id="modal-form-task" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
</div>

<!-- New Project Modal -->
<div class="modal" id="modal-form-project" tabindex="-1" role="dialog" aria-labelledby="modalNewProjectTitle"
  aria-hidden="true">
</div>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        Select "Logout" below if you are ready to end your current session.
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">
          Cancel
        </button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>