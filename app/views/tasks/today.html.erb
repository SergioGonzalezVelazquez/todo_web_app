<!-- Page Wrapper -->
<div id="wrapper">

  <!-- Sidebar -->
  <%= render "shared/sidebar", active: 2 %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      <%= render "shared/navbar", title: 'Today' %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->

        <!-- Content Row -->
        <div class="row">

          <!-- Today Pending Tasks Card -->
          <%= render "shared/card", title: 'Pending Tasks', value: @today_tasks.count, icon: 'fas fa-list', color: 'primary' %>

          <!-- Today Completed Tasks Card -->
          <%= render "shared/card", title: 'Completed Tasks', value: @today_tasks_completed, icon: 'fas fa-check', color: 'success' %>

        </div>

        <!-- List of all pending tasks for today -->
        <% @today_tasks.each_with_index do |task, index| %>
        <%= render "tasks/task", task: task, index: index %>
        <% end %>
      </div>
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%= render "shared/footer"%>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>
